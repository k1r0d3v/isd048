<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">

    <distributable/>

    <display-name>WS Events Service</display-name>

    <!-- JAXWS service -->  

    <listener>
        <listener-class>
            com.sun.xml.ws.transport.http.servlet.WSServletContextListener
        </listener-class>
    </listener>

    <servlet>
        <servlet-name>WSServlet</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>WSServlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>

    <!-- REST service -->
    <!-- Fill XXX and uncomment the following lines --> 

    <servlet>
        <display-name>ShowsServlet</display-name>
        <servlet-name>ShowsServlet</servlet-name>
        <servlet-class>
            es.udc.ws.app.restservice.servlets.ShowsServlet
        </servlet-class>
    </servlet>

    <servlet>
        <display-name>ReservationsServlet</display-name>
        <servlet-name>ReservationsServlet</servlet-name>
        <servlet-class>
            es.udc.ws.app.restservice.servlets.ReservationsServlet
        </servlet-class>
    </servlet>

    <servlet>
        <display-name>CheckServlet</display-name>
        <servlet-name>CheckServlet</servlet-name>
        <servlet-class>
            es.udc.ws.app.restservice.servlets.CheckServlet
        </servlet-class>
    </servlet>

    <servlet>
        <display-name>BuyServlet</display-name>
        <servlet-name>BuyServlet</servlet-name>
        <servlet-class>
            es.udc.ws.app.restservice.servlets.BuyServlet
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowsServlet</servlet-name>
        <url-pattern>/shows/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ReservationsServlet</servlet-name>
        <url-pattern>/reservations/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CheckServlet</servlet-name>
        <url-pattern>/check/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BuyServlet</servlet-name>
        <url-pattern>/buy/*</url-pattern>
    </servlet-mapping>

    <!-- General configuration -->

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
